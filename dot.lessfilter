#!/bin/sh

case "$1" in
    Makefile|*.mk|*.sh|*.c|*.cpp|*.cc|*.m|*.rb|*.py|*.rb|*.hs|*.lhs|*.java|*.scala|*.R|*.rs|*.sql|*.html|*.xml|*.xsd|*.js|*.coffee|*.css|*.scss|*.sass|*.haml|*.md|*.rst|*.php|*.php3|*.pl|*.conf|*.ini|*.conf|*.go|*.diff|*.patch|*.pp) pygmentize "$1" ;;
    *.iml) pygmentize -l xml "$1" ;;
    *) exit 1 ;;
esac

exit $?
